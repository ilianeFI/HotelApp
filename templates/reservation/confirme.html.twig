{% extends 'base.html.twig' %}

{% block title %}Réservation confirmée{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card text-center shadow-sm">
        <div class="card-body">
            <h1 class="display-5 text-success mb-3">
                ✅ Réservation confirmée
            </h1>
            <p class="lead mb-4">
                Votre réservation a été créée avec succès.
            </p>

            <div class="d-flex justify-content-center gap-2">
                <a href="{{ path('reservation_search') }}" class="btn btn-primary">
                    <i class="bi bi-arrow-left-circle"></i> Rechercher une autre chambre
                </a>
                <a href="{{ path('user_reservations') }}" class="btn btn-success">
                    <i class="bi bi-card-checklist"></i> Voir mes réservations
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
