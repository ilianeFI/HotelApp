{% extends 'base.html.twig' %}

{% block title %}Détails de la chambre{% endblock %}

{% block body %}
<div class="container py-5" style="max-width: 860px;">

    <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-2 mb-4">
        <div>
            <h1 class="page-title mb-1">Chambre #{{ room.id }}</h1>
            <div class="small" style="color: rgba(245,239,223,.72);">
                Détails complets : prix, capacité, disponibilité et image.
            </div>
        </div>

        <a href="{{ path('app_room_index') }}" class="btn btn-outline-gold">
            <i class="bi bi-arrow-left me-2"></i>Retour
        </a>
    </div>

    <div class="lux-card overflow-hidden">

        {# Header luxe #}
        <div class="px-4 py-3 d-flex align-items-center justify-content-between"
             style="border-bottom: 1px solid rgba(242,211,139,.18);">
            <div class="fw-bold" style="color: rgba(245,239,223,.92);">
                <i class="bi bi-door-open me-2" style="color: rgba(242,211,139,.85);"></i>
                Détails de la chambre
            </div>

            {% if room.isAvailable %}
                <span class="badge rounded-pill"
                      style="background: rgba(25,135,84,.20); border:1px solid rgba(25,135,84,.35);">
                    <i class="bi bi-check2-circle me-1"></i> Disponible
                </span>
            {% else %}
                <span class="badge rounded-pill"
                      style="background: rgba(220,53,69,.20); border:1px solid rgba(220,53,69,.35);">
                    <i class="bi bi-x-circle me-1"></i> Occupée
                </span>
            {% endif %}
        </div>

        <div class="p-4 p-md-5">

            <div class="row g-4 align-items-start">

                {# Image #}
                <div class="col-12 col-md-5">
                    <div class="rounded-4 overflow-hidden"
                         style="border: 1px solid rgba(242,211,139,.18); background: rgba(255,255,255,.04);">
                        {% if room.image %}
                            <img src="{{ asset('uploads/rooms/' ~ room.image) }}"
                                 alt="Image chambre"
                                 class="w-100"
                                 style="height: 260px; object-fit: cover;"
                                 loading="lazy"
                                 decoding="async">
                        {% else %}
                            <div class="d-flex flex-column align-items-center justify-content-center text-center p-4"
                                 style="height: 260px;">
                                <i class="bi bi-image fs-2" style="color: rgba(242,211,139,.70);"></i>
                                <div class="small mt-2" style="color: rgba(245,239,223,.60);">
                                    Aucune image
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <div class="small mt-2" style="color: rgba(245,239,223,.60);">
                        <i class="bi bi-info-circle me-1" style="color: rgba(242,211,139,.70);"></i>
                        Taille recommandée : image horizontale (ex: 1200×800).
                    </div>
                </div>

                {# Infos #}
                <div class="col-12 col-md-7">
                    <div class="p-4 rounded-4"
                         style="background: rgba(255,255,255,.04); border: 1px solid rgba(242,211,139,.12);">
                        <div class="row g-3">

                            <div class="col-12 col-sm-6">
                                <div class="small mb-1" style="color: rgba(242,211,139,.85);">Numéro</div>
                                <div class="fw-semibold" style="color: rgba(245,239,223,.92);">
                                    <i class="bi bi-hash me-2" style="color: rgba(242,211,139,.70);"></i>
                                    {{ room.number }}
                                </div>
                            </div>

                            <div class="col-12 col-sm-6">
                                <div class="small mb-1" style="color: rgba(242,211,139,.85);">Prix</div>
                                <div class="fw-semibold" style="color: rgba(245,239,223,.92);">
                                    <i class="bi bi-cash-coin me-2" style="color: rgba(242,211,139,.70);"></i>
                                    {{ room.price }} <span style="color: rgba(242,211,139,.85);">MAD</span>
                                </div>
                            </div>

                            <div class="col-12 col-sm-6">
                                <div class="small mb-1" style="color: rgba(242,211,139,.85);">Capacité</div>
                                <div class="fw-semibold" style="color: rgba(245,239,223,.92);">
                                    <i class="bi bi-people me-2" style="color: rgba(242,211,139,.70);"></i>
                                    {{ room.capacity }} personnes
                                </div>
                            </div>

                            <div class="col-12 col-sm-6">
                                <div class="small mb-1" style="color: rgba(242,211,139,.85);">Disponibilité</div>
                                <div class="fw-semibold" style="color: rgba(245,239,223,.92);">
                                    {% if room.isAvailable %}
                                        Disponible
                                    {% else %}
                                        Occupée
                                    {% endif %}
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="small mb-1" style="color: rgba(242,211,139,.85);">Description</div>
                                <div style="color: rgba(245,239,223,.78); line-height: 1.7;">
                                    {{ room.description }}
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row gap-2 mt-4 justify-content-md-end">
                        <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="btn btn-gold btn-lg">
                            <i class="bi bi-pencil me-2"></i>Modifier
                        </a>

                        <form method="post"
                              action="{{ path('app_room_delete', {'id': room.id}) }}"
                              onsubmit="return confirm('Voulez-vous vraiment supprimer cette chambre ?');"
                              class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                            <button type="submit"
                                    class="btn btn-lg"
                                    style="border:1px solid rgba(220,53,69,.55); color: rgba(245,239,223,.92); background: rgba(220,53,69,.10);">
                                <i class="bi bi-trash me-2"></i>Supprimer
                            </button>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
    