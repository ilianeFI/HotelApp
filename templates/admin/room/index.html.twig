{% extends 'base.html.twig' %}

{% block title %}Liste des chambres{% endblock %}

{% block body %}
<div class="container py-4">

    <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-2 mb-4">
        <div>
            <h1 class="page-title mb-1">Toutes les   </h1>
            <div class="small" style="color: rgba(245,239,223,.72);">
                Gérez les chambres, disponibilités, images et descriptions.
            </div>
        </div>

        <a href="{{ path('app_room_new') }}" class="btn btn-gold">
            <i class="bi bi-plus-circle me-2"></i>Ajouter une chambre
        </a>
    </div>

    {% for msg in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show lux-card" role="alert">
            <i class="bi bi-check2-circle me-2"></i>
            {{ msg }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="lux-card p-0 overflow-hidden">
        <div class="d-flex align-items-center justify-content-between px-4 py-3"
             style="border-bottom: 1px solid rgba(242,211,139,.18);">
            <div class="fw-bold" style="color: rgba(245,239,223,.92);">
                <i class="bi bi-door-open me-2" style="color: rgba(242,211,139,.85);"></i>
                Liste des chambres
            </div>

            <span class="badge rounded-pill"
                  style="background: rgba(242,211,139,.12); border:1px solid rgba(242,211,139,.22); color: rgba(245,239,223,.90);">
                {{ rooms|length }} chambre(s)
            </span>
        </div>

        <div class="table-responsive">
            <table class="table align-middle text-center mb-0"
                   style="--bs-table-bg: transparent; --bs-table-color: rgba(245,239,223,.90);">
                <thead>
                    <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                        <th class="py-3 px-4" style="color: rgba(242,211,139,.92);">ID</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Numéro</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Prix</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Capacité</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Disponibilité</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Description</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Image</th>
                        <th class="py-3" style="color: rgba(242,211,139,.92);">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    {% for room in rooms %}
                        <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                            <td class="py-3 px-4">
                                <span class="badge rounded-pill"
                                      style="background: rgba(242,211,139,.12); border:1px solid rgba(242,211,139,.22); color: rgba(245,239,223,.92);">
                                    #{{ room.id }}
                                </span>
                            </td>

                            <td class="py-3">
                                <span class="badge rounded-pill"
                                      style="background: rgba(242,211,139,.10); border:1px solid rgba(242,211,139,.20); color: rgba(245,239,223,.90);">
                                    <i class="bi bi-door-open me-1"></i> {{ room.number }}
                                </span>
                            </td>

                            <td class="py-3">
                                <span style="color: rgba(245,239,223,.86);">
                                    {{ room.price }} <span style="color: rgba(242,211,139,.85);">MAD</span>
                                </span>
                            </td>

                            <td class="py-3" style="color: rgba(245,239,223,.78);">
                                {{ room.capacity }}
                            </td>

                            <td class="py-3">
                                {% if room.isAvailable %}
                                    <span class="badge rounded-pill"
                                          style="background: rgba(25,135,84,.20); border:1px solid rgba(25,135,84,.35);">
                                        <i class="bi bi-check2-circle me-1"></i> Disponible
                                    </span>
                                {% else %}
                                    <span class="badge rounded-pill"
                                          style="background: rgba(220,53,69,.20); border:1px solid rgba(220,53,69,.35);">
                                        <i class="bi bi-x-circle me-1"></i> Occupée
                                    </span>
                                {% endif %}
                            </td>

                            <td class="py-3" style="color: rgba(245,239,223,.70);">
                                {{ room.description|length > 30 ? room.description|slice(0,30) ~ '...' : room.description }}
                            </td>

                            <td class="py-3">
                                {% if room.image %}
                                    <img src="{{ asset('uploads/rooms/' ~ room.image) }}"
                                         alt="Room"
                                         class="rounded-3"
                                         style="width: 86px; height: 54px; object-fit: cover; border: 1px solid rgba(242,211,139,.18);"
                                         loading="lazy"
                                         decoding="async">
                                {% else %}
                                    <span class="small" style="color: rgba(245,239,223,.55);">Aucune</span>
                                {% endif %}
                            </td>

                            <td class="py-3">
                                <div class="d-flex justify-content-center gap-2 flex-wrap">

                                    <a href="{{ path('app_room_show', {'id': room.id}) }}"
                                       class="btn btn-sm btn-outline-gold"
                                       data-bs-toggle="tooltip" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a href="{{ path('app_room_edit', {'id': room.id}) }}"
                                       class="btn btn-sm btn-outline-gold"
                                       data-bs-toggle="tooltip" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form method="post"
                                          action="{{ path('app_room_delete', {'id': room.id}) }}"
                                          onsubmit="return confirm('Voulez-vous vraiment supprimer cette chambre ?');"
                                          class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                                        <button type="submit"
                                                class="btn btn-sm"
                                                style="border:1px solid rgba(220,53,69,.55); color: rgba(245,239,223,.92); background: rgba(220,53,69,.10);"
                                                data-bs-toggle="tooltip" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="py-4 text-center">
                                <div class="small" style="color: rgba(245,239,223,.65);">
                                    <i class="bi bi-info-circle me-2"></i>Aucune chambre trouvée.
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>

            </table>
        </div>
    </div>

</div>

{# Active Bootstrap tooltips #}
<script>
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>
{% endblock %}
