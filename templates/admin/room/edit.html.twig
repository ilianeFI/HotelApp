{% extends 'base.html.twig' %}

{% block title %}Modifier la chambre{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-2 mb-4">
                <div>
                    <h1 class="page-title mb-1">Modifier la chambre</h1>
                    <div class="small" style="color: rgba(245,239,223,.72);">
                        Chambre <span style="color: rgba(242,211,139,.92);">#{{ room.id }}</span> — mettez à jour les informations.
                    </div>
                </div>

                <a href="{{ path('app_room_index') }}" class="btn btn-outline-gold">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="lux-card p-4 p-md-5">

                {# Messages flash #}
                {% for msg in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check2-circle me-2"></i>
                        {{ msg }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {# Formulaire d'édition #}
                {{ include('admin/room/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                <div class="mt-4 d-flex flex-column flex-md-row justify-content-between gap-2">

                    {# Bouton retour #}
                    <a href="{{ path('app_room_index') }}" class="btn btn-outline-gold btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                    </a>

                    {# Bouton supprimer (rouge) #}
                    <form method="post"
                          action="{{ path('app_room_delete', {'id': room.id}) }}"
                          onsubmit="return confirm('Voulez-vous vraiment supprimer cette chambre ?');"
                          class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                        <button type="submit"
                                class="btn btn-lg"
                                style="border:1px solid rgba(220,53,69,.55); color: rgba(245,239,223,.92); background: rgba(220,53,69,.10);">
                            <i class="bi bi-trash me-2"></i>Supprimer
                        </button>
                    </form>

                </div>

                <div class="small mt-3" style="color: rgba(245,239,223,.60);">
                    <i class="bi bi-shield-check me-1" style="color: rgba(242,211,139,.70);"></i>
                    Suppression protégée par CSRF.
                </div>

            </div>

        </div>
    </div>
</div>
{% endblock %}
