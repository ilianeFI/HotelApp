{% extends 'base.html.twig' %}

{% block title %}Détail de la réservation{% endblock %}

{% block body %}
<div class="container py-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-2 mb-4">
        <div>
            <h1 class="page-title mb-1">Réservation #{{ reservation.id }}</h1>
            <div class="small" style="color: rgba(245,239,223,.72);">
                Détails complets du client, de la chambre et des dates.
            </div>
        </div>

        <a href="{{ path('admin_reservations') }}" class="btn btn-outline-gold">
            <i class="bi bi-arrow-left me-2"></i>Retour
        </a>
    </div>

    <div class="lux-card p-0 overflow-hidden">
        <div class="d-flex align-items-center justify-content-between px-4 py-3"
             style="border-bottom: 1px solid rgba(242,211,139,.18);">
            <div class="fw-bold" style="color: rgba(245,239,223,.92);">
                <i class="bi bi-receipt me-2" style="color: rgba(242,211,139,.85);"></i>
                Informations de la réservation
            </div>

            {# Badge statut en haut #}
            <div>
                {% if reservation.status == 'Confirmée' %}
                    <span class="badge rounded-pill"
                          style="background: rgba(25,135,84,.20); border:1px solid rgba(25,135,84,.35);">
                        <i class="bi bi-check2-circle me-1"></i> Confirmée
                    </span>
                {% elseif reservation.status == 'Annulée' %}
                    <span class="badge rounded-pill"
                          style="background: rgba(220,53,69,.20); border:1px solid rgba(220,53,69,.35);">
                        <i class="bi bi-x-circle me-1"></i> Annulée
                    </span>
                {% else %}
                    <span class="badge rounded-pill"
                          style="background: rgba(255,193,7,.18); border:1px solid rgba(255,193,7,.32); color: rgba(245,239,223,.92);">
                        <i class="bi bi-hourglass-split me-1"></i> {{ reservation.status }}
                    </span>
                {% endif %}
            </div>
        </div>

        <div class="p-4 p-md-5">
            <div class="table-responsive">
                <table class="table align-middle mb-0"
                       style="--bs-table-bg: transparent; --bs-table-color: rgba(245,239,223,.90);">
                    <tbody>
                        <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                            <th class="w-25 py-3" style="color: rgba(242,211,139,.85);">Client</th>
                            <td class="py-3">
                                <i class="bi bi-person-circle me-2" style="color: rgba(242,211,139,.75);"></i>
                                {{ reservation.user.email }}
                            </td>
                        </tr>

                        <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                            <th class="py-3" style="color: rgba(242,211,139,.85);">Chambre</th>
                            <td class="py-3">
                                <span class="badge rounded-pill"
                                      style="background: rgba(242,211,139,.10); border:1px solid rgba(242,211,139,.20); color: rgba(245,239,223,.90);">
                                    <i class="bi bi-door-open me-1"></i> {{ reservation.room.number }}
                                </span>
                            </td>
                        </tr>

                        <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                            <th class="py-3" style="color: rgba(242,211,139,.85);">Capacité</th>
                            <td class="py-3" style="color: rgba(245,239,223,.78);">
                                {{ reservation.room.capacity }} personnes
                            </td>
                        </tr>

                        <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                            <th class="py-3" style="color: rgba(242,211,139,.85);">Date de début</th>
                            <td class="py-3" style="color: rgba(245,239,223,.78);">
                                <i class="bi bi-calendar-event me-2" style="color: rgba(242,211,139,.70);"></i>
                                {{ reservation.startDate|date('d/m/Y') }}
                            </td>
                        </tr>

                        <tr style="border-bottom: 1px solid rgba(255,255,255,.06);">
                            <th class="py-3" style="color: rgba(242,211,139,.85);">Date de fin</th>
                            <td class="py-3" style="color: rgba(245,239,223,.78);">
                                <i class="bi bi-calendar2-week me-2" style="color: rgba(242,211,139,.70);"></i>
                                {{ reservation.endDate|date('d/m/Y') }}
                            </td>
                        </tr>

                        <tr>
                            <th class="py-3" style="color: rgba(242,211,139,.85);">Statut</th>
                            <td class="py-3">
                                {% if reservation.status == 'Confirmée' %}
                                    <span class="badge rounded-pill"
                                          style="background: rgba(25,135,84,.20); border:1px solid rgba(25,135,84,.35);">
                                        <i class="bi bi-check2-circle me-1"></i> Confirmée
                                    </span>
                                {% elseif reservation.status == 'Annulée' %}
                                    <span class="badge rounded-pill"
                                          style="background: rgba(220,53,69,.20); border:1px solid rgba(220,53,69,.35);">
                                        <i class="bi bi-x-circle me-1"></i> Annulée
                                    </span>
                                {% else %}
                                    <span class="badge rounded-pill"
                                          style="background: rgba(255,193,7,.18); border:1px solid rgba(255,193,7,.32); color: rgba(245,239,223,.92);">
                                        <i class="bi bi-hourglass-split me-1"></i> {{ reservation.status }}
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex gap-2 flex-wrap mt-4">
                <a href="{{ path('admin_reservation_update', {'id': reservation.id}) }}"
                   class="btn btn-outline-gold">
                    <i class="bi bi-pencil-square me-2"></i>Modifier
                </a>

                <form method="post"
                      action="{{ path('admin_reservation_delete', {'id': reservation.id}) }}"
                      onsubmit="return confirm('Supprimer définitivement cette réservation ?');"
                      class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                    <button class="btn"
                            style="border:1px solid rgba(220,53,69,.55); color: rgba(245,239,223,.92); background: rgba(220,53,69,.10);">
                        <i class="bi bi-trash me-2"></i>Supprimer
                    </button>
                </form>
            </div>

            <div class="small mt-3" style="color: rgba(245,239,223,.60);">
                <i class="bi bi-shield-check me-1" style="color: rgba(242,211,139,.70);"></i>
                Action admin — suppression protégée par CSRF.
            </div>
        </div>
    </div>

</div>
{% endblock %}
