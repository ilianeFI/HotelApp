{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">

            <div class="lux-card p-4 p-md-5">

                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-circle brand-badge"
                         style="width:54px;height:54px;">
                        <i class="bi bi-person-plus-fill fs-4"></i>
                    </div>

                    <h2 class="page-title mt-3 mb-1">Créer un compte</h2>
                    <div class="small" style="color: rgba(245,239,223,.72);">
                        Rejoignez-nous et réservez en toute simplicité.
                    </div>
                </div>

                {{ form_start(registrationForm) }}

                    <div class="mb-3">
                        {{ form_label(registrationForm.userName, null, {
                            label_attr: { class: 'form-label' }
                        }) }}

                        <div class="input-group">
                            <span class="input-group-text"
                                  style="background: rgba(255,255,255,.06); border-color: rgba(242,211,139,.18); color: rgba(245,239,223,.85);">
                                <i class="bi bi-person"></i>
                            </span>
                            {{ form_widget(registrationForm.userName, {
                                attr: {
                                    class: 'form-control',
                                    style: 'background: rgba(255,255,255,.06); border-color: rgba(242,211,139,.18); color: rgba(245,239,223,.92);'
                                }
                            }) }}
                        </div>

                        <div class="small mt-1" style="color: rgba(245,239,223,.70);">
                            {{ form_errors(registrationForm.userName) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.email, null, {
                            label_attr: { class: 'form-label' }
                        }) }}

                        <div class="input-group">
                            <span class="input-group-text"
                                  style="background: rgba(255,255,255,.06); border-color: rgba(242,211,139,.18); color: rgba(245,239,223,.85);">
                                <i class="bi bi-envelope"></i>
                            </span>
                            {{ form_widget(registrationForm.email, {
                                attr: {
                                    class: 'form-control',
                                    style: 'background: rgba(255,255,255,.06); border-color: rgba(242,211,139,.18); color: rgba(245,239,223,.92);'
                                }
                            }) }}
                        </div>

                        <div class="small mt-1" style="color: rgba(245,239,223,.70);">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {
                            label_attr: { class: 'form-label' }
                        }) }}

                        <div class="input-group">
                            <span class="input-group-text"
                                  style="background: rgba(255,255,255,.06); border-color: rgba(242,211,139,.18); color: rgba(245,239,223,.85);">
                                <i class="bi bi-key"></i>
                            </span>
                            {{ form_widget(registrationForm.plainPassword, {
                                attr: {
                                    class: 'form-control',
                                    style: 'background: rgba(255,255,255,.06); border-color: rgba(242,211,139,.18); color: rgba(245,239,223,.92);'
                                }
                            }) }}
                        </div>

                        <div class="small mt-1" style="color: rgba(245,239,223,.70);">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {
                            attr: { class: 'form-check-input' }
                        }) }}
                        {{ form_label(registrationForm.agreeTerms, null, {
                            label_attr: { class: 'form-check-label', style: 'color: rgba(245,239,223,.78);' }
                        }) }}

                        <div class="small mt-1" style="color: rgba(245,239,223,.70);">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-gold btn-lg">
                            <i class="bi bi-check2-circle me-2"></i>
                            S’inscrire
                        </button>
                    </div>

                {{ form_end(registrationForm) }}

                <div class="text-center mt-4">
                    <div class="small" style="color: rgba(245,239,223,.70);">
                        Déjà un compte ?
                        <a href="{{ path('app_login') }}" class="text-decoration-none fw-semibold">
                            Se connecter <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
{% endblock %}
